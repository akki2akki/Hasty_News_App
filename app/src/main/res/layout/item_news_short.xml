<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemNewsSourceTVS"
        android:text="@string/news_source_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemArticleTitleTVS"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemNewsSourceTVS"
        app:layout_constraintEnd_toStartOf="@id/itemArticleImageViewS"
        android:text="@string/news_title"
        android:textColor="@color/colorBlack"
        android:padding="5dp"
        android:textSize="20sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/itemArticleImageViewS"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test_img"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>